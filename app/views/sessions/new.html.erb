<div>
  <h1>ユーザログイン</h1>
</div>    
<div>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  
  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </div>  
  <div>
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>
  </div>  
  
    <%= f.submit 'ログイン' %>
  <% end %>
  
  <p>新規登録はこちら：<%= link_to '新規登録', new_user_path %></p>
</div>  